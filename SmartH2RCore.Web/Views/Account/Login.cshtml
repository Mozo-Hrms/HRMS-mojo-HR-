@model LoginDTO
<!DOCTYPE html>
<html lang="en">
@{ Layout = null; }
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <meta name="description" content="Smarthr - Bootstrap Admin Template">
    <meta name="keywords" content="admin, estimates, bootstrap, business, corporate, creative, management, minimal, modern, accounts, invoice, html5, responsive, CRM, Projects">
    <meta name="author" content="Dreamguys - Bootstrap Admin Template">
    <meta name="robots" content="noindex, nofollow">
    <title>Login - HRMS</title>

    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="~/images/favicon.png">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css">

    <!-- Fontawesome CSS -->
    <link rel="stylesheet" href="~/css/font-awesome.min.css">

    <!-- Lineawesome CSS -->
    <link rel="stylesheet" href="~/css/line-awesome.min.css">

    <!-- Select2 CSS -->
    <link rel="stylesheet" href="~/css/select2.min.css">

    <!-- Datetimepicker CSS -->
    <link rel="stylesheet" href="~/css/bootstrap-datetimepicker.min.css">

    <!-- Tagsinput CSS -->
    <link rel="stylesheet" href="~/plugins/bootstrap-tagsinput/bootstrap-tagsinput.css">

    <link href="~/css/lobibox.css" rel="stylesheet" />

    <!-- Main CSS -->
    <link rel="stylesheet" href="~/css/style.css">

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
            <script src="~/js/html5shiv.min.js"></script>
            <script src="~/js/respond.min.js"></script>
        <![endif]-->
</head>

<body class="account-page">

    <!-- Main Wrapper -->
    <div class="main-wrapper">
        <div class="account-content">
         
            <div class="container">

                <!-- Account Logo -->
                <div class="account-logo">
                    @if (Model != null && !string.IsNullOrEmpty(Model.LoginLogoUrl))
                    {
                        <img src="@Model.LoginLogoUrl" alt="Login Logo">
                    }
                    else
                    {
                        <img src="~/images/MojoHr.png" alt="Dreamguy's Technologies">
                    }

                    
                </div>
                <!-- /Account Logo -->
                <div class="account-box">
                    <div class="account-wrapper">
                        <h3 class="account-title">Login</h3>
                        <p class="account-subtitle">Access to our dashboard</p>
                        <!-- Account Form -->
                        <form method="post">
                            <div class="form-group">
                                <label>Email Address</label>
                                @Html.TextBoxFor(v => v.Email, new { @class = "form-control" })
                                @Html.ValidationMessageFor(v => v.Email)
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col">
                                        <label>Password</label>
                                    </div>
                                    <div class="col-auto">
                                        <a class="text-muted" href="#">
                                            Forgot password?
                                        </a>
                                    </div>
                                </div>
                                @Html.TextBoxFor(v => v.Password, new { @class = "form-control", @type = "password" })
                                @Html.ValidationMessageFor(v => v.Password)
                            </div>
                           <div>
                                <button class="btn-submit" type="submit"> Login</button>
                           </div>
                        @*    <hr/>
                            <div>
                                <button class="btn-submit-R  center" type="submit"> Register</button>
                            </div> *@
                            <br />
                            <p class="text-center opacity-50"> Powered By SDL Globe Technologies Pvt. Ltd.</p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- /Main Wrapper -->
    <!-- jQuery -->
    <script src="~/js/jquery-3.2.1.min.js"></script>

    <!-- Bootstrap Core JS -->
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>

    <!-- Slimscroll JS -->
    <script src="~/js/jquery.slimscroll.min.js"></script>

    <!-- Select2 JS -->
    <script src="~/js/select2.min.js"></script>

    <!-- Datetimepicker JS -->
    <script src="~/js/moment.min.js"></script>
    <script src="~/js/bootstrap-datetimepicker.min.js"></script>

    <!-- Multiselect JS -->
    <script src="~/js/multiselect.min.js"></script>

    <!-- Custom JS -->
    <script src="~/js/app.js"></script>
    <script src="~/js/site.js"></script>

    <!--Toaster -->
    <script src="~/js/lobibox.js"></script>
    @await Html.PartialAsync("_ValidationScriptsPartial")
    @await Html.PartialAsync("_Message")
    <style>
        .input-validation-error {
            border: 1px solid red;
        }

        .field-validation-error {
            color: red;
            font-size: 12px;
        }
        .btn-submit{
            background: -moz-linear-gradient(left, #28C2B8 0%, #1E90FF 100%);
            background: -webkit-linear-gradient(left, #28C2B8 0%, #1E90FF 100%);
            background: -ms-linear-gradient(left, #28C2B8 0%, #1E90FF 100%);
            background: linear-gradient(to right, #28C2B8 0%, #1E90FF 100%);
            border: 0;
            border-radius: 4px;
            display: block;
            font-size: 22px;
            color: white;
            border-radius:4px;
            padding: 10px 26px;
            width: 100%;
        }

        .btn-submit-R{
            background: #2AC1E6;
            border-radius: 4px;
            font-size: 16px;
            color: white;
            border: 0;
        }

        .center {
            display: block;
            margin: 0 auto;
        }

        .opacity-50 {
            opacity: 0.5;
        }

        .text-center {
            text-align: center;
        }
    </style>
</body>

</html>

