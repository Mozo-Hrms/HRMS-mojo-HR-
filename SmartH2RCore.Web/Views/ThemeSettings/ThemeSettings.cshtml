@model SmartH2RCore.Models.DTO.Settings.ThemeSettingsDTO

@{
    ViewData["Title"] = "Theme Setting";
    Layout = "~/Views/Shared/_LayoutSettings.cshtml";
}

<html>
<head>
    <title>@ViewData["Title"]</title>
</head>
<body>
    <div class="content container-fluid" data-select2-id="8">
        <div class="row" data-select2-id="7">
            <div class="col-md-8 offset-md-2" data-select2-id="6">
                <form data-select2-id="5" method="post">
                    @Html.HiddenFor(v => v.Id)
                    <!-- Page Header -->
                    <div class="page-header">
                        <div class="row">
                            <div class="col-sm-12">
                                <h3 class="page-title">Theme Settings</h3>
                            </div>
                        </div>
                    </div>
                    <!-- /Page Header -->
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="form-group">
                                <div class="form-group row">
                                    <label class="col-lg-3 col-form-label">Company Name</label>
                                    <div class="col-lg-9">
                                        @Html.TextBoxFor(v => v.CompanyName, new { @class = "form-control", @placeholder = "Enter CompanyName" })
                                        @Html.ValidationMessageFor(model => model.CompanyName, "", new { @class = "text-danger" })

                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-3 col-form-label">Company Logo</label>
                                    <div class="col-lg-7">
                                        @Html.TextBoxFor(v => v.CompanyLogo, new { @type = "file", @class = "form-control", @placeholder = "Chose CompanyLogo" })
                                        @Html.ValidationMessageFor(model => model.CompanyLogo, "", new { @class = "text-danger" })
                                        <span class="form-text text-muted">Recommended image size is 40px x 40px</span>
                                    </div>
                                    <div class="col-lg-2">
                                        @if (!string.IsNullOrEmpty(Model.CompanyLogoUrl))
                                        {
                                        <div class="img-thumbnail float-right"><img src="@Model.CompanyLogoUrl" alt="Company Logo" width="40" height="40"></div>
                                        }
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-3 col-form-label">Login Logo</label>
                                    <div class="col-lg-7">
                                        @Html.TextBoxFor(v => v.LoginLogo, new { @type = "file", @class = "form-control", @placeholder = "Chose LoginLogo" })
                                        @Html.ValidationMessageFor(model => model.LoginLogo, "", new { @class = "text-danger" })
                                        <span class="form-text text-muted">Recommended image size is 16px x 16px</span>
                                    </div>
                                    <div class="col-lg-2">
                                        @if (!string.IsNullOrEmpty(Model.LoginLogoUrl))
                                        {
                                        <div class="settings-image img-thumbnail float-right"><img src="@Model.LoginLogoUrl" class="img-fluid" width="16" height="16" alt="Login Logo"></div>
                                        }
                                    </div>
                                </div>
                                <div class="col-sm-12">
                                    <div class="submit-section">
                                        <button type="submit" class="btn btn-primary submit-btn"><i class="fa fa-save"></i>&nbsp;@(Model == null || Model.Id <= 0 ? "Add" : "Save")</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
